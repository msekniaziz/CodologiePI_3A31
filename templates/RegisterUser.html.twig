{% extends 'front.html.twig' %}

{% block body %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {%endfor %}
    <section class="login py-5 border-top-1">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-8 align-item-center">
                    <div class="border border">
                        <h3 class="bg-gray p-4">Register Now</h3>
                    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                    <fieldset class="p-4">
                        {{ form_row(form.nom, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.prenom, {'attr': {'class': 'form-control mb-3'}})}}
                        {{ form_row(form.mail, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.date_birthday)}}
                        {{ form_row(form.tel, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.gender, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.password, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.Confirmpassword, {'attr': {'class': 'form-control mb-3'}}) }}
                        {{ form_row(form.age, {'attr': {'class':'form-control mb-3'}}) }}
                    {{ form_end(form) }}
                        <div class="loggedin-forgot d-inline-flex my-3">
                            <input type="checkbox" id="registering" class="mt-1">
                            <label for="registering" class="px-2">By registering, you accept our <a class="text-primary font-weight-bold" href="terms-condition.html">Terms & Conditions</a></label>
                        </div>
                    </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
