{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    <section class="login py-5 border-top-1">
        <div class="container">
            <div class="row ">
                <div class="col-md-8 offset-md-2">
                    <div class="border rounded p-4 form-container"> 
                        <h3 class="bg-gray p-4 mb-4">Add an organization</h3>
                    <!-- Ajouter la classe form-container -->
                        {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                        <div class="form-group">
                            {{ form_row(form.nomAssociation, {'attr': {'class': 'form-control', 'placeholder': 'Name '}}) }}
                            {% if form_errors(form.nomAssociation) %}
        <div class="alert alert-danger mt-2 mb-0" role="alert">
          {{ form_errors(form.nomAssociation) }}
        </div>
      {% endif %}
                        </div>  
                        {# <div class="form-group">
                            {{ form_row(form.logoAssociation, {'attr': {'class': 'form-control', 'placeholder': 'Logo '}}) }}
                            {% if form_errors(form.logoAssociation) %}
                                <div class="text-danger">{{ form_errors(form.logoAssociation) }}</div>
                            {% endif %}
                        </div> #}
                        {# <div class="form-group">
                            {{ form_row(form.logoAssociation, {'attr': {'class': 'form-control', 'placeholder': 'Logo '}}) }}
                        </div> #}
                        <div class="form-group">
                            {{ form_row(form.descriptionAsso, {'attr': {'class': 'form-control','placeholder': 'Description'}}) }}
                            {% if form_errors(form.descriptionAsso) %}
        <div class="alert alert-danger mt-2 mb-0" role="alert">
          {{ form_errors(form.descriptionAsso) }}
        </div>
      {% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.adresseAssociation, {'attr': {'class': 'form-control', 'placeholder': 'Address'}}) }}
                            {% if form_errors(form.adresseAssociation) %}
        <div class="alert alert-danger mt-2 mb-0" role="alert">
          {{ form_errors(form.adresseAssociation) }}
        </div>
      {% endif %}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.RIB, {'attr': {'class': 'form-control','placeholder': 'RIB'}}) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}



