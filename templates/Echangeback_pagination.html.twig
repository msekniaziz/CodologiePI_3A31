{# templates/custom_pagination.html.twig #}

{% if pageCount > 1 %}
    <ul class="pagination">
        {% if previous is defined %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({'page': previous})) }}">
                    Previous
                </a>
            </li>
        {% endif %}

        {% if next is defined %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({'page': next})) }}">
                    Next
                </a>
            </li>
        {% endif %}
    </ul>
{% endif %}
