{% extends 'front.html.twig' %}

{% block title %}show Blog{% endblock %}

{% block body %}
    <h1>blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>titre</th>  
                <td>{{ blog.titre }}</td>
            </tr>
            <tr>
                <th>category</th>
                <td>{{ blog.category }}</td>
            </tr>
           <tr>
                <th>Contenu_blog</th>
                <td>{{ blog.contenuBlog }}</td>
            </tr>
            
            <tr>
                <th>Status</th>
                <td>{{ blog.status }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ blog.rate }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_blog_index') }}" class="btn btn-link">Back to List</a>
    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}" class="btn btn-link">Edit</a>
    <a href="{{ path('app_reponse_blog_new', {'id': blog.id}) }}" class="btn btn-link">Reponse Blog</a>

    <form method="post" action="{{ path('app_back_blog_delete', {'id': blog.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
{% endblock %}
