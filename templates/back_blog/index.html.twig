{% extends 'back.html.twig' %}

<title>Blog index</title>

{% block body %}
    <h1>Blog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Titre</th>
                <th>Contenu_blog</th>
                <th>Status</th>
                <th>Rate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.id }}</td>
                <td>{{ blog.category }}</td>
                <td>{{ blog.titre }}</td>
                <td>{{ blog.contenuBlog }}</td>
                <td>{{ blog.status }}</td>
                <td>{{ blog.rate }}</td>
                <td>
                    <a href="{{ path('app_back_blog_show', {'id': blog.id}) }}">show</a>
                    <a href="{{ path('app_back_blog_edit', {'id': blog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_blog_new') }}">Create new</a>
{% endblock %}
