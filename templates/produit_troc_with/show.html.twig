{% extends 'HomeOn.html.twig' %}

{% block titreprod %}<title>Produit Troc with</title>{% endblock %}

{% block body %}
    <h1>ProduitTroc</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit_troc_with.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit_troc_with.nom }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ produit_troc_with.category }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit_troc_with.description }}</td>
            </tr>
            
            <tr>
                <th>Image</th>
                <td>
                    {% if produit_troc_with.image %}
                        <img width="80px" height="auto" src="{{ asset('/uploads/images/' ~ produit_troc_with.image) }}" alt="Product Image">
                    {% endif %}
                </td>
            </tr>
           
        </tbody>
    </table>

    <a href="{{ path('app_produit_troc_with_index') }}" class="btn btn-link">Back to List</a>
    <a href="{{ path('app_produit_troc_with_edit', {'id': produit_troc_with.id}) }}" class="btn btn-link">Edit</a>

    <form method="post" action="{{ path('app_produit_troc_with_delete', {'id': produit_troc_with.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit_troc_with.id) }}">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
     
{% endblock %}
