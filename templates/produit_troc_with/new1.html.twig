{% block body %}
<body class="body-wrapper">
    <section class="advt-post bg-gray py-5">
        <div class="container">
<form method="post" action="{{ path('app_produit_troc_with_new', {'id': id}) }}" enctype="multipart/form-data">

                {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

                <!-- Post Your ad start -->
                <fieldset class="border border-gary px-3 px-md-4 py-4 mb-5">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>Post Your Exchange with</h3>
                        </div>
                        <div class="col-lg-6">
                              <h6 class="font-weight-bold pt-4 pb-1">{{ form_label(form.nom) }}
</h6>
{{ form_widget(form.nom, {'attr': {'class': 'form-control'}, 'help_attr': {'style': 'color: red;'}}) }}
                    {{ form_errors(form.nom) }}

                            <h6 class="font-weight-bold pt-4 pb-1">{{ form_label(form.description) }}
</h6>
{{ form_widget(form.description, {'attr': {'class': 'form-control'}, }) }}
                    {{ form_errors(form.description) }}

                        </div>
                        <div>

                         {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.category) }}
                           

                        </div>
                        </div>

                              <div class="choose-file text-center my-4 py-4 rounded bg-white">
    <label for="file-upload">
        <span class="d-block font-weight-bold text-dark">Drop files anywhere to upload</span>
        <span class="d-block">or</span>
        <span class="d-block btn bg-primary text-white my-3 select-files">Select files</span>
        <span class="d-block">Maximum upload file size: 500 KB</span>
        {{ form_row(form.image, {'attr': {'class': 'form-control-file d-none'},  'label_attr': {'class': 'd-none'}, 'id': 'file-upload'}) }}
    </label>
</div>
 <!-- Post Your ad end -->

                <!-- Checkbox for terms and conditions -->
                <div class="checkbox d-inline-flex">
                    <input type="checkbox" id="terms-&-condition" class="mt-1">
