{% extends 'HomeOn.html.twig' %}

{% block titleED %}<title>Edit ProduitTroc</title>{% endblock %}

{% block body %}
<section class="login py-5 border-top-1">
    <div class="container">
        <div class="border border">
            <h1 class="bg-gray p-4">Edit your Product</h1>
            <form method="post" action="{{ path('app_produit_troc_edit', {'id': form.vars.data.id}) }}">
                {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

                {{ form_row(form.nom, {'attr': {'class': 'form-control'}, 'help_attr': {'style': 'color: red;'}}) }}
                {{ form_errors(form.nom) }}

                {{ form_row(form.description, {'attr': {'class': 'form-control'}, 'help_attr': {'style': 'color: red;'}}) }}
                {{ form_errors(form.description) }}

                {{ form_row(form.category, {'attr': {'class': 'form-control'}, 'help_attr': {'style': 'color: red;'}}) }}
                {{ form_errors(form.category) }}

                <br>

                {{ form_row(form.nom_produit_recherche, {'attr': {'class': 'form-control'}, 'help_attr': {'style': 'color: red;'}}) }}
                {{ form_errors(form.nom_produit_recherche) }}

                {{ form_row(form.image, {'attr': {'class': 'form-control'}, 'help_attr': {'style': 'color: red;'}}) }}
                {{ form_errors(form.image) }}

                {{ form_row(form.save, {
                    'label': 'Edit',
                    'attr': {
                        'class': 'btn btn-primary font-weight-bold mt-3',
                        'type': 'submit'
                    }
                }) }}
                
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</section>
{% endblock %}
