{% extends 'HomeOn.html.twig' %}


{% block body %}

    <div class="breadcrumb">
        <span class="breadcrumb-item">Home</span>
        <span class="breadcrumb-item">Profile</span>
        <span class="breadcrumb-item active">User Information</span>
    </div>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <section class="user-profile section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="sidebar">
                        <div class="image d-flex justify-content-center">
                            <img src="{{ asset('assets/images/user/account_icon.jpg') }}" alt="" class="rounded-circle img-thumbnail" style="width: 200px; height: auto;">
                        </div>
                        <br>
                        <h5 class="text-center"> {{ app.user.getNom() }} {{ app.user.getPrenom() }}</h5>
                        <br>
                        <div class="widget user-dashboard-menu">
                            <ul>
                                <li><a href=""><i class="fa fa-cog"></i> Desactivate Account</a></li>
                                <li><a href="" data-toggle="modal" data-target="#deleteaccount"><i class="fa fa-cog"></i>Delete Account</a></li>
                                <li><a href=""><i class="fa fa-power-off"></i>Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <!-- Edit Profile Welcome Text -->
                    <div class="widget welcome-message">
                        <h2>Edit profile</h2>
                        <p>Custom you account information </p>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="widget personal-info">
                                <h3 class="widget-header user">Edit Personal Information</h3>
                                {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                        <fieldset class="p-4">
                            <div class="form-group">
                            {{ form_row(form.nom, {'attr': {'class': 'form-control mb-3'}}) }}
                            </div>
                            <div class="form-group">
                            {{ form_row(form.prenom, {'attr': {'class': 'form-control mb-3'}})}}
                            </div>
                            <div class="form-group">
                            {{ form_row(form.mail, {'attr': {'class': 'form-control mb-3'}}) }}
                            </div>
                                <div class="form-group">
                                    {{ form_row(form.tel, {'attr': {'class': 'form-control mb-3'}}) }}
                                </div>
                            {{ form_end(form) }}
                        </fieldset>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <!-- Change Password -->
                            <div class="widget change-password">
                                <h3 class="widget-header user">Edit Password</h3>
                                <form action="#">
                                    <!-- Current Password -->
                                    <div class="form-group">
                                        <label for="current-password">Current Password</label>
                                        <input type="password" class="form-control" id="current-password">
                                    </div>
                                    <!-- New Password -->
                                    <div class="form-group">
                                        <label for="new-password">New Password</label>
                                        <input type="password" class="form-control" id="new-password">
                                    </div>
                                    <!-- Confirm New Password -->
                                    <div class="form-group">
                                        <label for="confirm-password">Confirm New Password</label>
                                        <input type="password" class="form-control" id="confirm-password">
                                    </div>
                                    <!-- Submit Button -->
                                    <button class="btn btn-transparent">Change Password</button>
                                </form>
                            </div>
                        </div>
                </div>
            </div>
        </div>
        </div>
    </section>
{% endblock %}
